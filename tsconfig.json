{
  "compilerOptions": {
    "allowJs": false,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "isolatedModules": true,
    "lib": ["ESNext", "DOM"],
    "module": "Node16",
    "moduleResolution": "node16",
    "strict": true,
    "target": "esnext",
    "strictNullChecks": true,
    "noUncheckedIndexedAccess": true,
    "downlevelIteration": true,
    "importHelpers": true,
    "resolveJsonModule": true,
    "declaration": true,
    "jsx": "react-jsx",
    "jsxImportSource": "react"
  },
  "typeAcquisition": {
    "include": [
        "jest"
    ]
  },
  "include": ["src", "tests"]
}